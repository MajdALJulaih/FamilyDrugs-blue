<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/background2"
    tools:context="com.example.zahra.familydrugs_blue.SignUp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/DrugsTop"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:id="@id/imageView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:inputType="text"
        android:text="Result Found:"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/Resultfound"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:inputType="text"
        android:text="Results"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/Result"
        android:layout_below="@+id/Resultfound"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp">

        <TextView
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Drug Not found?"
            android:ems="10"
            android:layout_marginLeft="30dp"
            android:id="@+id/Not"
            android:layout_below="@+id/Result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:text="Add it to DB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddNewDrug"
            android:layout_weight="0.13"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>